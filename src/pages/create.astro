---
import PageLayout from "~/layouts/PageLayout.astro";
---
<PageLayout>
  <div class="m-20 max-w-md mx-auto">
    <h2 class="text-xl font-bold mb-4">Create Document</h2>
    <form class="grid grid-cols-1 gap-6" action="http://localhost:3001/api/create/" method="POST">
      <div>
        <label class="block mb-1 font-bold" for="name">Name:</label>
        <input class="text-black dark:text-white bg-white dark:bg-gray-700 w-full border border-gray-400 py-2 px-3 rounded" type="text" id="name" name="name" required>
      </div>
      <div>
        <label class="block mb-1 font-bold" for="type">Type:</label>
        <input class="text-black dark:text-white bg-white dark:bg-gray-700 w-full border border-gray-400 py-2 px-3 rounded" type="text" id="type" name="type" required>
      </div>     
      <div>
        <label class="block mb-1 font-bold" for="statusDescription">Status Description:</label>
        <textarea class="text-black dark:text-white bg-white dark:bg-gray-700 w-full border border-gray-400 py-2 px-3 rounded" id="statusDescription" name="description"></textarea>
      </div>
      <div class="flex justify-end">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Create Document</button>
      </div>
    </form>
  </div>
</PageLayout>
